{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Z-App with integrated frontend build",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node scripts/runtime-schema.js && npx prisma generate && node src/index.js",
    "build": "node build-safe.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "seed": "node src/seeds/seed-users.js",
    "build:frontend": "cd ../frontend && npm install --include=dev && npm run build",
    "postinstall": "node scripts/setup-schema.js && npx prisma generate",
    "setup:schema": "node scripts/setup-schema.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@supabase/supabase-js": "^2.87.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "prisma": "^5.22.0",
    "rate-limit-redis": "^4.2.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
